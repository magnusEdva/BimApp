<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dashboard_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TopicCommentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="fill"
                android:padding="5dp"
                />



            <TextView
                android:id="@+id/TopicCOmmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/view_topic_comment_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="clock icon"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/TopicCOmmentDate"
                android:src="@drawable/ic_topic_comment_date" />

            <ImageView
                android:id="@+id/TopicCommentImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_below="@id/TopicCommentName"
                />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/TopicImageprogressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TopicCommentImage"
                android:layout_marginStart="139dp" />

            <TextView
                android:id="@+id/TopicCommentContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TopicImageprogressBar"
                android:padding="5dp"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
